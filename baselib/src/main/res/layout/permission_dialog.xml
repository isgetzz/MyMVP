<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x280"
    android:layout_height="wrap_content"
    android:background="@drawable/shape5f0"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center"
        android:text="权限申请"
        android:textColor="@color/black333"
        android:textSize="@dimen/x15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginBottom="@dimen/x25"
        android:gravity="center"
        android:text="允许才能获取权限"
        android:textColor="@color/black666"
        android:textSize="@dimen/x14" />

    <include layout="@layout/base_color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_f0_left"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black444"
            android:textSize="@dimen/x14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/determine_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_f0_right"
            android:gravity="center"
            android:text="去设置"
            android:textColor="#575C8A"
            android:textSize="@dimen/x14"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>